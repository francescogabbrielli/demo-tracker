<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dtracker.MainActivity">

    <ToggleButton
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:id="@+id/buttonTracking"
        style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:textOn="@string/button_stop"
        android:textOff="@string/button_start"
        android:onClick="toggleTracking"/>

    <Button
        android:layout_row="1"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:id="@+id/buttonDistance"
        style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_distance"
        android:onClick="showDistance"/>

    <Button
        android:layout_row="2"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:id="@+id/buttonLocation"
        style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_location"
        android:onClick="showMaps"/>

</GridLayout>
